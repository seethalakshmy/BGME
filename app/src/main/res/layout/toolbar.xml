<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/menuLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/draw_menu" />

        <LinearLayout
            android:id="@+id/menu_home_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
           android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--  <ToggleButton
                  android:id="@+id/set_lan_left"
                  android:layout_width="90dp"
                  android:layout_height="25dp"
                  android:layout_centerInParent="true"
                  android:background="@drawable/lang_selector"
                  android:text=""
                  android:textOff=""
                  android:textOn="" />-->


            <TextView
                android:id="@+id/im_Arabic_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="@string/arabic"
                android:textSize="18dp"
                android:textColor="#000000"
                android:textStyle="bold" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/im_Enlish_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="@string/english"
                android:textColor="#ffffff" />

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_contact" />


        <ImageButton
            android:id="@+id/menuRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/draw_menu" />

        <LinearLayout
            android:id="@+id/menu_home_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <!--    <ToggleButton
                    android:id="@+id/set_lan_right"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/lang_selector"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />-->
            <TextView
                android:id="@+id/im_Enlish_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="@string/english"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/im_Arabic_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:text="@string/arabic"
                android:textColor="#ffffff" />


        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.Toolbar>